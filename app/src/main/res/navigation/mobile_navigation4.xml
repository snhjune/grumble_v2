<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation4"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.foodapp.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_spinWheel"
        android:name="com.example.foodapp.ui.SpinWheel.SpinWheelFragment"
        android:label="spinWheel"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_favorite"
        android:name="com.example.foodapp.ui.Favorite.FavoriteFragment"
        android:label="@string/favorite"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/nav_game"
        android:name="com.example.foodapp.ui.game.GoogleMapFragment"
